<h2>Sites</h2>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= link_to site.name, site %></td>
    <td><%= link_to 'Environments', site_environments_path(site) %></td>
    <td><%= link_to edit_button, edit_site_path(site) %></td>
    <td><%= link_to destroy_button, site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


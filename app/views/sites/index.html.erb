<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Timeout</th>
    <th>Retries</th>
    <th>Between retries wait</th>
    <th>Ip relay commands</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.timeout %></td>
    <td><%= site.retries %></td>
    <td><%= site.between_retries_wait %></td>
    <td><%= site.ip_relay_commands %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

